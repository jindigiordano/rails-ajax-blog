<div class="col-xs-12">
  <div class="text-center">
    <h2><%= post.title %></h2>
    <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
  </div>

  <div>
    <%= post.body %>
  </div>


  <%= link_to "EDIT", edit_post_path(post) %>
  <%= link_to 'DELETE', post_path(post), :method => :delete %>

  <br>
</div>
